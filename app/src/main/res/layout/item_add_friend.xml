<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/search_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1px"
    android:background="#fff"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/search_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/public_10dp"
        android:layout_toRightOf="@+id/search_header"
        android:maxLines="1"
        android:text="公司名称"
        android:textColor="@color/group_list_gray"
        android:textSize="18sp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/public_10dp"
        android:background="@drawable/rp_arrow"/>


</RelativeLayout>