<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity_gray_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mine_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#037EFF"
                android:paddingBottom="@dimen/public_10dp"
                android:paddingLeft="@dimen/public_15dp"
                android:paddingRight="@dimen/public_15dp"
                android:paddingTop="@dimen/public_70dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <dhcc.cn.com.fix_phone.ui.widget.RoundImageView
                        android:id="@+id/user_icon"
                        android:layout_width="@dimen/public_80dp"
                        android:layout_height="@dimen/public_80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/user_default_icon"
                        app:borderRadius="5dp"
                        app:type="round"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/public_10dp"
                        android:layout_toRightOf="@id/user_icon"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/user_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/button_right_arrow"/>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/mine_circle"
                style="@style/Mine_TextView"
                android:layout_marginTop="@dimen/public_15dp"
                android:drawableLeft="@drawable/tabbar_circle_select"
                android:gravity="center|left"
                android:text="我的圈子"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0EFF5"/>

            <TextView
                android:id="@+id/mine_house"
                style="@style/Mine_TextView"
                android:drawableLeft="@drawable/mine_collect"
                android:gravity="center|left"
                android:text="个人收藏"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0EFF5"/>

            <TextView
                android:id="@+id/mine_suggest"
                style="@style/Mine_TextView"
                android:drawableLeft="@drawable/mine_suggest"
                android:gravity="center|left"
                android:text="投诉建议"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0EFF5"/>

            <TextView
                android:id="@+id/mine_vip"
                style="@style/Mine_TextView"
                android:drawableLeft="@drawable/mine_vip"
                android:gravity="center|left"
                android:text="付费会员"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0EFF5"/>

            <TextView
                android:id="@+id/mine_advert"
                style="@style/Mine_TextView"
                android:layout_marginTop="@dimen/public_15dp"
                android:drawableLeft="@drawable/mine_setting"
                android:gravity="center|left"
                android:text="店铺广告"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0EFF5"/>

            <TextView
                android:id="@+id/mine_produce"
                style="@style/Mine_TextView"
                android:drawableLeft="@drawable/mine_setting"
                android:gravity="center|left"
                android:text="店铺产品"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0EFF5"/>

            <TextView
                android:id="@+id/mine_clear"
                style="@style/Mine_TextView"
                android:layout_marginTop="@dimen/public_15dp"
                android:drawableLeft="@drawable/mine_clean"
                android:gravity="center|left"
                android:text="清空缓存"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0EFF5"/>

            <TextView
                android:id="@+id/mine_app"
                style="@style/Mine_TextView"
                android:layout_marginTop="@dimen/public_15dp"
                android:drawableLeft="@drawable/explain"
                android:gravity="center|left"
                android:text="APP简介"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0EFF5"/>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_50dp"
        android:layout_alignParentTop="true"/>
</RelativeLayout>
